<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Laboratorio1Cenfotec.View.UsuarioDetalle">
    <StackLayout HorizontalOptions="Fill">
        <!--Detalle Persona-->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" Padding="30">
            <StackLayout>
                <Image Source="borrar_icon.png" HeightRequest="50" WidthRequest="50"/>
            </StackLayout>
            <StackLayout VerticalOptions="Center">
                <Label Text="Carlos Mendez"/>
                <Label Text="Descripcion Basica"/>
            </StackLayout>
        </StackLayout>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Blue">
            <!--Cuadro Verde-->
            <StackLayout BackgroundColor="Green" HeightRequest="50"  HorizontalOptions="Fill" VerticalOptions="Start">

            </StackLayout>
            <!--Cuadro Rojo-->
             <StackLayout BackgroundColor="Red" HeightRequest="50" VerticalOptions="EndAndExpand" HorizontalOptions="Fill">

            </StackLayout>
        </StackLayout>
        <Button Text="Editar" VerticalOptions="End" HeightRequest="50"/>
    </StackLayout>
</ContentPage>
